@model ExerciseOptions

<!DOCTYPE html>

<html>
<head>
    <title>Individual Exercise</title>
</head>
<body>
<div>
    <h2>@Model.ExerciseName Details</h2>
    <table>
        <tr>
            <th>Exercise ID</th>
            <th>Exercise Name</th>
            <th>Type</th>
            <th>Sets</th>
            <th>Reps</th>
            <th>Time</th>
        </tr>
        <tr>
            <td>@Model.ExerciseID</td>
            <td>@Model.ExerciseName</td>
            <td>@Model.Type</td>
            <td>@Model.Sets</td>
            <td>@Model.Reps</td>
            <td>@Model.Time</td>
        </tr>
    </table>
    <div style="display: block">
        <a href="/Exercise/UpdateExercise/@Model.ExerciseID">Update this exercise</a>
    </div>
    <div style="display: block">
       @using (Html.BeginForm("DeleteExercise", "Exercise", "Post"))
       {
           <input asp-for="ExerciseID" type="hidden" value="@Model.ExerciseID" />
           <input asp-for="ExerciseID" type="submit" onclick="return confirm('Are you sure you want to delete this item?');" value="Delete this exercise" class="btn btn-danger"/>
       }
    </div>
</div>
</body>
</html>